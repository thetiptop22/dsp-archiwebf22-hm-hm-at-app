        <script>
          // Get the eye icons
const eyeIcon = document.getElementById('eye-icon');
const eyeSlashIcon = document.getElementById('eye-slash-icon');
const confirmPasswordIcon = document.getElementById('eye-icon2');
const confirmPasswordIconSlash = document.getElementById('eye-slash-icon2');


// Get the password input field
const passwordInput = document.getElementById('pwd');
const confirmPasswordInput = document.getElementById('confirm-password');


// Fonction pour afficher/masquer le mot de passe
const togglePasswordVisibility = (input, icon, iconSlash) => {
  if (input.type === 'password') {
    input.type = 'text';
    icon.classList.add('hidden');
    iconSlash.classList.remove('hidden');
  } else {
    input.type = 'password';
    icon.classList.remove('hidden');
    iconSlash.classList.add('hidden');
  }
};
// Événements pour afficher/masquer le mot de passe
eyeIcon.addEventListener('click', () => {
  togglePasswordVisibility(passwordInput, eyeIcon, eyeSlashIcon);
});

eyeSlashIcon.addEventListener('click', () => {
  togglePasswordVisibility(passwordInput, eyeIcon, eyeSlashIcon);
});

confirmPasswordIcon.addEventListener('click', () => {
  togglePasswordVisibility(confirmPasswordInput, confirmPasswordIcon, confirmPasswordIconSlash);
});

confirmPasswordIconSlash.addEventListener('click', () => {
  togglePasswordVisibility(confirmPasswordInput, confirmPasswordIcon, confirmPasswordIconSlash);
});

const form = document.getElementById('my-form');
const errorElement = document.getElementById('error');

// Fonction pour afficher un message d'erreur
const showError = (message) => {
  errorElement.innerText = message;
  errorElement.classList.remove('hidden');
};

// Fonction pour effacer le message d'erreur
const clearError = () => {
  errorElement.innerText = '';
  errorElement.classList.add('hidden');
};

// Fonction pour vérifier si les champs de mot de passe correspondent
const checkPasswords = () => {
  if (passwordInput.value !== confirmPasswordInput.value) {
    showError('Les mots de passe ne correspondent pas');
  } else {
    clearError();
  }
};

// Événements pour vérifier les champs de mot de passe
passwordInput.addEventListener('input', checkPasswords);
confirmPasswordInput.addEventListener('input', checkPasswords);

// Événement pour envoyer le formulaire
form.addEventListener('submit', (event) => {
  if (passwordInput.value !== confirmPasswordInput.value) {
    showError('Les mots de passe ne correspondent pas');
    event.preventDefault();
  }
});

        </script>

