  <!DOCTYPE html>
  <html lang="en">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <script src='https://cdn.tailwindcss.com'></script>
      <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>
      <title>dashboard</title>
        <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css"
    />
    </head>

   
      
    <!-- component -->
  <body class = "body bg-withe ">
    {{> "sidebar" }}

      <div class = " responsive ">
         
              <div class = "w-[100vw] h-[100vh] px-3 sm:px-5 flex items-center justify-center absolute 	">
                    <div class = " border-x-4	w-full sm:w-1/2 lg:2/3 px-6    text-white z-50 py-4  rounded-lg">
                  
                    <label for="default-search" class="mb-2 text-sm font-medium text-amber-900 sr-only dark:text-white">Search</label>
      <div class="relative">
          <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <svg aria-hidden="true" class="w-5 h-5 text-amber-500 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
          </div>
          <input type="search" id="default-search" class="block w-full p-4 pl-10 text-sm text-amber-900 border border-amber-300 rounded-lg bg-amber-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-amber-700 dark:border-amber-600 dark:placeholder-amber-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Email de client ..." required>
          <button type="submit" class="text-white absolute right-2.5 bottom-2.5 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Search</button>
      </div>
      <div class="my-4 bg-red-600 h-[1px]"></div>
       
                      <div class = "bg-black w-full flex justify-center text-withe text-xl mb:2 md:mb-5">
                          Coordonnées
                      </div>
                      <div class="mb-6">
                          <label for="name" class="w-full flex justify-center text-black mb:2 md:mb-5 font-medium ">Nom</label>
                          <p  id="Nom" class="text-black leading-6 bg-gray-300 m-2 w-100 w-full flex justify-center text-black mb:2 md:mb-5" >TANOUTI</p>
                      </div> 
                      <div class="mb-6">
                          <label for="prenom" class="w-full flex justify-center text-black mb:2 md:mb-5 font-medium ">Prénom</label>
                          <p  id="prenom" class="text-black leading-6 bg-gray-300 m-2 w-100 w-full flex justify-center text-black mb:2 md:mb-5" >ABDELILAH</p>
                      </div>
                      <div class="mb-6">
                          <label for="telephone" class=" w-full flex justify-center text-black mb:2 md:mb-5 font-medium ">Téléphone</label>
                          <p id="tele" class="text-black leading-6 bg-gray-300 m-2 w-100 w-full flex justify-center text-black mb:2 md:mb-5" >06 66 66 66 66</p>
                      </div>


                       <div class="my-4 bg-amber-600 h-[1px]"></div>
                        <div class = "bg-black w-full flex justify-center text-withe text-xl mb:2 md:mb-5">
                          Gain
                      </div>
                        <table class="table-auto border border-red-500 center  justify-center w-[45vw]  ">
                          <thead>
                            <tr>
                              <th class="text-black px-4 py-2 border-r border-b border-red-500">
                                Date

                              </th>
                                         <th class=" text-black px-4 py-2 border-r border-b border-red-500">
                                Nom

                              </th>
                              </th>
                                         <th class="text-black px-4 py-2 border-r border-b border-red-500">
                                Gain fourni

                              </th>
                              
                            </tr>
                          </thead>
                          <tbody>
                            <tr>
                              <td class="text-black px-4 py-2 border-r border-b border-red-500">
                                25/02/2023

                              </td>
                                  <td class="text-black px-4 py-2 border-r border-b border-red-500">
                                Thé vanille gratuit

                              </td>
                                  <td class="text-black px-4 py-2 border-r border-b border-red-500">
                                <button class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded" id="btn">
                                  Oui 
                                </button>
                               

                                <button class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">
                                  Non
                                </button>

                              </td>
                            </tr>
                            <tr>
                              <td class=" text-black px-4 py-2 border-r border-b border-red-500">
                                26/02/2023

                              </td>
                               <td class=" text-black px-4 py-2 border-r border-b border-red-500">
                               Bon d'achat de 30€

                              </td>
                              <td class="px-4 py-2 border-r border-b border-red-500">
                               <button class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded " id="btn1">
                                Oui
                               </button>
                                <button class="bg-red-500 hover:bg-red-600  text-white font-bold py-2 px-4 rounded ">
                                Non
                               </button>

                              </td>

                            </tr>
                          </tbody>
                        </table>
                  </div>
              </div>
          
      </div>
 
      <script>
          const btn = document.querySelector('#btn');
          const btn1 = document.querySelector('#btn1');
  const canvas = document.querySelector('#confetti-canvas');
  function onButtonClick(){
    let myConfetti = confetti.create(canvas, {
      resize: true,
      useWorker: true
    });
    myConfetti({
      particleCount: 100,
      spread: 160
    });
  }
  btn.addEventListener('click', onButtonClick);
  btn1.addEventListener('click', onButtonClick)

      </script>
    
      
      
    </body>
    
  </html>


